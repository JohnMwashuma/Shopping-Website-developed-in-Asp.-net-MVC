            <div class="col-main">

                <div class="category-details is-anchor">
                    <div class="category-description">
                        <p><span>We offer a full range of laboratory centrifuges to meet the separation needs of your application. Our offering includes high speed and ultra centrifuges from Hitachi Koki for protocols involving purification of proteins or RNA. Our brand of general purpose and microcentrifuges offer reliable operation for protocols including processing, harvesting, pelleting and separating blood, cells, and more.</span></p>
                    </div>
                </div>
                <div class="category-products">
                    <div class="toolbar">
                        <div class="pager">
                            <div class="count-container">
                                <p class="amount amount--no-pages">
                                   GrandLab Digital Fixers Ltd Services
                                </p>


                            </div>





                        </div>
                    </div>

                    <ol class="products-list">
                        @foreach (var service in Model)
                        {
                            <li>
                                <a href="@Url.Action("ServiceDetails", "Products", new {id = service.ServiceId})" class="product-name display-block work-medium h5">@service.Name</a>
                                <div class="clearfix">
                                    <a href="@Url.Action("ServiceDetails", "Products", new {id = service.ServiceId})" class="product-image left thirty">
                                        @{
                                            var base64 = Convert.ToBase64String(service.Image);
                                            var imgSrc = String.Format("data:~/Images;base64,{0}", base64);
                                        }
                                        <img src="@imgSrc" alt="NuWind NU-C200R General Purpose Bench Top 2 Liter Refrigerated Centrifuge" class="max-image img-thumbnail">
                                    </a>
                                    <div class="product-shop left seventy">
                                        <div class="desc std">
                                            <p>
                                                @service.Details.Substring(0, Math.Min(service.Details.Length, 200));
                                            </p><a href="@Url.Action("ServiceDetails", "Products", new {id = service.ServiceId})" class="link-learn display-block work-medium">Learn More</a>
                                        </div>
                                        @using (Html.BeginForm("RequestService", "ShoppingCart", new { id = service.ServiceId }))
                                        {
                                            if (User.IsInRole(RoleName.CanManageProducts) != true)
                                             {
                                                 <div class="request-links">
                                                     <button type="submit" title="Request Service" class="button green"><span><span>Request Service</span></span></button>
                                                 </div>
                                             }
                                        }

                                    </div>
                                </div>
                            </li>
                                            }

                    </ol>


                    <ul class="pagination">
                        @{
                            double totalPage = @ViewBag.TotalPages;
                        }
                        @for (int i = 1; i <= totalPage; i++)
                        {
                            if (i == ViewBag.Page)
                            {
                                <li class="active">@Html.ActionLink(i.ToString() + " ", "Service", new { Page = i })</li>
                            }
                            else
                            {
                                <li>@Html.ActionLink(i.ToString() + " ", "Service", new { Page = i })</li>

                            }
                        }
                    </ul>
                    <div class="toolbar-bottom">
                        <div class="toolbar">
                            <div class="pager">
                                <div class="count-container">
                                    <p class="amount amount--no-pages">
                                        GrandLab Digital Fixers Ltd Services
                                    </p>


                                </div>





                            </div>
                        </div>
                    </div>
                </div>
            </div>

